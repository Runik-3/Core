{
	"extends": "@vue/tsconfig/tsconfig.web.json",
	"include": [
		"types/env.d.ts",
		"types/types.d.ts",
		"src/**/*",
		"src/**/*.vue",
		"tests/index.test.ts"
	],
	"exclude": ["src/**/__tests__/*"],
	"compilerOptions": {
		"baseUrl": ".",
		"paths": {
			"@/*": ["./src/*"]
		},
		"types": ["node", "@types/jest"]
	},

	"references": [
		{
			"path": "./tsconfig.vite-config.json"
		},
		{
			"path": "./tsconfig.vitest.json"
		}
	]
}
